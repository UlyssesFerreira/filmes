<div class="bg-white w-56 rounded-md mt-4">
  <%= form_with url: search_index_path, method: :get, class: "flex p-2" do |form| %>
    <%= form.text_field :query, value: params[:query], placeholder: "Buscar", class: "w-full p-1 focus:ring-0 focus:outline-none focus:border-transparent" %>
    <%= button_tag type: "submit", class: "cursor-pointer" do %>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="black" class="size-5">
        <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 1 0 0 11 5.5 5.5 0 0 0 0-11ZM2 9a7 7 0 1 1 12.452 4.391l3.328 3.329a.75.75 0 1 1-1.06 1.06l-3.329-3.328A7 7 0 0 1 2 9Z" clip-rule="evenodd" />
      </svg>
    <% end %>
  <% end %>
</div>
