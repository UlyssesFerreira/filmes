  <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), class: "mt-4") do |form| %>
    <div class="flex flex-col gap-y-6 items-center mt-6">
      <div class="w-full">
        <%= form.label :email, "Email" %>
        <%= form.email_field :email, class: "w-full bg-white rounded-md ring-1 p-1" %>
      </div>
      <div class="w-full">
        <%= form.label :password, "Senha" %>
        <%= form.password_field :password, class: "w-full bg-white rounded-md ring-1 p-1" %>
      </div>
      <%= form.submit "Entrar", class: "w-full bg-slate-800 rounded-md py-1 cursor-pointer text-white font-medium" %>
    </div>
  <% end %>
  <div>
    <a href="<%= new_user_registration_path %>", class="font-medium text-slate-700 hover:opacity-90">Criar conta</a>
  </div>
